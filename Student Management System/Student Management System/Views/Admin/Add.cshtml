@model Student_Management_System.Models.Entities.Student;
<h1>Add Student Details</h1>
<form method="post">
    <div class="mt-3">
        <label class="form-label">Id</label>
        <input type="number" class="form-control" asp-for="Id" />
    </div>
    <div class="mt-3">
        <label class="form-label">Name</label>
        <input type="text" class="form-control" asp-for="Name"/>
    </div>
    <div class="mt-3">
        <label class="form-label">EmailId</label>
        <input type="email" class="form-control" asp-for="EmailId" />
    </div>
    <div class="mt-3">
        <label class="form-label">MobileNo</label>
        <input type="number" class="form-control" asp-for="MobileNo" />
    </div>
    <div class="mt-3">
        <label class="form-label">Address</label>
        <input type="text" class="form-control" asp-for="Address" />
    </div>
    <div class="mt-3">
        <label class="form-label">Date</label>
        <input type="datetime" class="form-control" asp-for="Date" />
    </div>
    <div class="mt-3">
        <label class="form-label">Fess</label>
        <input type="number" class="form-control" asp-for="Fees" />
    </div>
    <div class="mt-3">
        <label class="form-label">Role</label>
        <input type="text" name="Status" value="Student" class="form-control" asp-for="Role" readonly/>
    </div>
    <div class="form-check">
        <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios1" value="option1" asp-for="Status" checked>
        <label class="form-check-label" for="exampleRadios1">
            Active
        </label>
    </div>
    <div class="form-check">
        <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios2" value="option2" asp-for="Status">
        <label class="form-check-label" for="exampleRadios2">
            Inactive
        </label>
    </div>
    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>